import React, { useState, useEffect, useRef } from 'react';
import { Play, Pause, RotateCcw, Plus, Trash2, Clock, Calendar, TrendingUp } from 'lucide-react';

export default function StudyTracker() {
  const [subjects, setSubjects] = useState([]);
  const [activeSubject, setActiveSubject] = useState(null);
  const [isRunning, setIsRunning] = useState(false);
  const [currentTime, setCurrentTime] = useState(0);
  const [newSubjectName, setNewSubjectName] = useState('');
  const [showAddSubject, setShowAddSubject] = useState(false);
  const intervalRef = useRef(null);

  // Get current day of week (0 = Sunday, 6 = Saturday)
  const getCurrentDay = () => new Date().getDay();
  
  // Get current week identifier (Year-WeekNumber)
  const getCurrentWeek = () => {
    const now = new Date();
    const onejan = new Date(now.getFullYear(), 0, 1);
    const week = Math.ceil((((now - onejan) / 86400000) + onejan.getDay() + 1) / 7);
    return `${now.getFullYear()}-W${week}`;
  };

  // Load data from storage on mount
  useEffect(() => {
    loadData();
  }, []);

  const loadData = async () => {
    try {
      const result = await window.storage.get('study-tracker-subjects');
      if (result && result.value) {
        setSubjects(JSON.parse(result.value));
      }
    } catch (error) {
      console.log('No existing data found, starting fresh');
    }
  };

  const saveData = async (updatedSubjects) => {
    try {
      await window.storage.set('study-tracker-subjects', JSON.stringify(updatedSubjects));
    } catch (error) {
      console.error('Failed to save data:', error);
    }
  };

  // Timer logic
  useEffect(() => {
    if (isRunning) {
      intervalRef.current = setInterval(() => {
        setCurrentTime(prev => prev + 1);
      }, 1000);
    } else {
      if (intervalRef.current) {
        clearInterval(intervalRef.current);
      }
    }
    return () => {
      if (intervalRef.current) {
        clearInterval(intervalRef.current);
      }
    };
  }, [isRunning]);

  const formatTime = (seconds) => {
    const hrs = Math.floor(seconds / 3600);
    const mins = Math.floor((seconds % 3600) / 60);
    const secs = seconds % 60;
    return `${hrs.toString().padStart(2, '0')}:${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
  };

  const addSubject = () => {
    if (newSubjectName.trim()) {
      const newSubject = {
        id: Date.now(),
        name: newSubjectName.trim(),
        weeklyData: {} // Structure: { "2024-W1": { 0: 3600, 1: 7200, ... } }
      };
      const updated = [...subjects, newSubject];
      setSubjects(updated);
      saveData(updated);
      setNewSubjectName('');
      setShowAddSubject(false);
    }
  };

  const deleteSubject = (subjectId) => {
    const updated = subjects.filter(s => s.id !== subjectId);
    setSubjects(updated);
    saveData(updated);
    if (activeSubject === subjectId) {
      setActiveSubject(null);
      setIsRunning(false);
      setCurrentTime(0);
    }
  };

  const toggleTimer = () => {
    if (!activeSubject) return;
    setIsRunning(!isRunning);
  };

  const resetTimer = () => {
    setIsRunning(false);
    setCurrentTime(0);
  };

  const saveSession = () => {
    if (!activeSubject || currentTime === 0) return;

    const currentWeek = getCurrentWeek();
    const currentDay = getCurrentDay();

    const updatedSubjects = subjects.map(subject => {
      if (subject.id === activeSubject) {
        const weeklyData = { ...subject.weeklyData };
        
        if (!weeklyData[currentWeek]) {
          weeklyData[currentWeek] = {};
        }
        
        weeklyData[currentWeek][currentDay] = (weeklyData[currentWeek][currentDay] || 0) + currentTime;
        
        return { ...subject, weeklyData };
      }
      return subject;
    });

    setSubjects(updatedSubjects);
    saveData(updatedSubjects);
    setCurrentTime(0);
    setIsRunning(false);
  };

  const getDayName = (dayNum) => {
    const days = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
    return days[dayNum];
  };

  const getWeeklyStats = (subject) => {
    const currentWeek = getCurrentWeek();
    const weekData = subject.weeklyData[currentWeek] || {};
    
    const dailyTimes = [];
    let totalSeconds = 0;
    
    for (let i = 0; i < 7; i++) {
      const seconds = weekData[i] || 0;
      dailyTimes.push({ day: i, seconds });
      totalSeconds += seconds;
    }
    
    const avgPerDay = totalSeconds / 7;
    
    return { dailyTimes, totalSeconds, avgPerDay };
  };

  const calculateAndSaveWeeklyAverages = async () => {
    const currentWeek = getCurrentWeek();
    
    const updatedSubjects = subjects.map(subject => {
      const weekData = subject.weeklyData[currentWeek] || {};
      
      let totalSeconds = 0;
      for (let i = 0; i < 7; i++) {
        totalSeconds += weekData[i] || 0;
      }
      
      const avgPerDay = totalSeconds / 7;
      
      // Store weekly averages in a separate structure
      const weeklyAverages = subject.weeklyAverages || {};
      weeklyAverages[currentWeek] = {
        total: totalSeconds,
        average: avgPerDay,
        saved: new Date().toISOString()
      };
      
      return { ...subject, weeklyAverages };
    });
    
    setSubjects(updatedSubjects);
    saveData(updatedSubjects);
  };

  const getAllWeeklyAverages = (subject) => {
    const averages = subject.weeklyAverages || {};
    return Object.entries(averages)
      .map(([week, data]) => ({ week, ...data }))
      .sort((a, b) => b.week.localeCompare(a.week))
      .slice(0, 8); // Show last 8 weeks
  };

  const activeSubjectData = subjects.find(s => s.id === activeSubject);

  return (
    <div className="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 p-4">
      <div className="max-w-4xl mx-auto">
        <div className="text-center mb-8 pt-8">
          <div className="flex items-center justify-center gap-3 mb-2">
            <Clock className="w-10 h-10 text-indigo-600" />
            <h1 className="text-4xl font-bold text-gray-800">Study Tracker</h1>
          </div>
          <p className="text-gray-600">Track your study time and build consistent habits</p>
        </div>

        {/* Timer Section */}
        <div className="bg-white rounded-2xl shadow-xl p-8 mb-6">
          <div className="text-center mb-6">
            <div className="text-6xl font-mono font-bold text-indigo-600 mb-4">
              {formatTime(currentTime)}
            </div>
            
            <div className="mb-4">
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Select Subject
              </label>
              <select
                value={activeSubject || ''}
                onChange={(e) => {
                  setActiveSubject(Number(e.target.value) || null);
                  resetTimer();
                }}
                className="w-full max-w-xs px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
                disabled={isRunning}
              >
                <option value="">Choose a subject...</option>
                {subjects.map(subject => (
                  <option key={subject.id} value={subject.id}>
                    {subject.name}
                  </option>
                ))}
              </select>
            </div>

            <div className="flex gap-3 justify-center">
              <button
                onClick={toggleTimer}
                disabled={!activeSubject}
                className={`px-6 py-3 rounded-lg font-medium transition-all flex items-center gap-2 ${
                  activeSubject
                    ? 'bg-indigo-600 text-white hover:bg-indigo-700 shadow-lg hover:shadow-xl'
                    : 'bg-gray-300 text-gray-500 cursor-not-allowed'
                }`}
              >
                {isRunning ? (
                  <>
                    <Pause className="w-5 h-5" />
                    Pause
                  </>
                ) : (
                  <>
                    <Play className="w-5 h-5" />
                    Start
                  </>
                )}
              </button>
              
              <button
                onClick={resetTimer}
                className="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-all flex items-center gap-2"
              >
                <RotateCcw className="w-5 h-5" />
                Reset
              </button>
              
              <button
                onClick={saveSession}
                disabled={currentTime === 0}
                className={`px-6 py-3 rounded-lg font-medium transition-all ${
                  currentTime > 0
                    ? 'bg-green-600 text-white hover:bg-green-700 shadow-lg'
                    : 'bg-gray-300 text-gray-500 cursor-not-allowed'
                }`}
              >
                Save Session
              </button>
            </div>
          </div>
        </div>

        {/* Subjects List */}
        <div className="bg-white rounded-2xl shadow-xl p-8 mb-6">
          <div className="flex justify-between items-center mb-6">
            <h2 className="text-2xl font-bold text-gray-800 flex items-center gap-2">
              <Calendar className="w-6 h-6 text-indigo-600" />
              Your Subjects
            </h2>
            <div className="flex gap-2">
              <button
                onClick={calculateAndSaveWeeklyAverages}
                className="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-all flex items-center gap-2"
              >
                <TrendingUp className="w-5 h-5" />
                Save Weekly Averages
              </button>
              <button
                onClick={() => setShowAddSubject(!showAddSubject)}
                className="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-all flex items-center gap-2"
              >
                <Plus className="w-5 h-5" />
                Add Subject
              </button>
            </div>
          </div>

          {showAddSubject && (
            <div className="mb-6 p-4 bg-indigo-50 rounded-lg">
              <input
                type="text"
                value={newSubjectName}
                onChange={(e) => setNewSubjectName(e.target.value)}
                onKeyPress={(e) => e.key === 'Enter' && addSubject()}
                placeholder="Enter subject name..."
                className="w-full px-4 py-2 border border-indigo-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 mb-2"
              />
              <button
                onClick={addSubject}
                className="w-full px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-all"
              >
                Add
              </button>
            </div>
          )}

          {subjects.length === 0 ? (
            <p className="text-center text-gray-500 py-8">No subjects yet. Add one to get started!</p>
          ) : (
            <div className="space-y-4">
              {subjects.map(subject => {
                const stats = getWeeklyStats(subject);
                return (
                  <div key={subject.id} className="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-all">
                    <div className="flex justify-between items-start mb-4">
                      <div>
                        <h3 className="text-xl font-semibold text-gray-800">{subject.name}</h3>
                        <div className="flex items-center gap-4 mt-2 text-sm text-gray-600">
                          <span className="flex items-center gap-1">
                            <Clock className="w-4 h-4" />
                            Total: {formatTime(stats.totalSeconds)}
                          </span>
                          <span className="flex items-center gap-1">
                            <TrendingUp className="w-4 h-4" />
                            Avg: {formatTime(Math.floor(stats.avgPerDay))}/day
                          </span>
                        </div>
                      </div>
                      <button
                        onClick={() => deleteSubject(subject.id)}
                        className="text-red-500 hover:text-red-700 transition-colors p-2"
                      >
                        <Trash2 className="w-5 h-5" />
                      </button>
                    </div>

                    <div className="grid grid-cols-7 gap-2">
                      {stats.dailyTimes.map(({ day, seconds }) => {
                        const isToday = day === getCurrentDay();
                        return (
                          <div
                            key={day}
                            className={`text-center p-2 rounded-lg ${
                              isToday ? 'bg-indigo-100 ring-2 ring-indigo-400' : 'bg-gray-50'
                            }`}
                          >
                            <div className="text-xs font-medium text-gray-600 mb-1">
                              {getDayName(day)}
                            </div>
                            <div className="text-sm font-semibold text-gray-800">
                              {seconds > 0 ? `${Math.floor(seconds / 60)}m` : '-'}
                            </div>
                          </div>
                        );
                      })}
                    </div>

                    {/* Weekly Averages History */}
                    {subject.weeklyAverages && Object.keys(subject.weeklyAverages).length > 0 && (
                      <div className="mt-4 pt-4 border-t border-gray-200">
                        <h4 className="text-sm font-semibold text-gray-700 mb-2">Past Weekly Averages</h4>
                        <div className="grid grid-cols-2 sm:grid-cols-4 gap-2">
                          {getAllWeeklyAverages(subject).map(({ week, total, average }) => (
                            <div key={week} className="bg-indigo-50 rounded p-2 text-center">
                              <div className="text-xs text-gray-600 mb-1">{week}</div>
                              <div className="text-sm font-semibold text-indigo-700">
                                {formatTime(Math.floor(average))}/day
                              </div>
                              <div className="text-xs text-gray-500">
                                {formatTime(total)} total
                              </div>
                            </div>
                          ))}
                        </div>
                      </div>
                    )}
                  </div>
                );
              })}
            </div>
          )}
        </div>

        <div className="text-center text-sm text-gray-500">
          <p>Data is saved locally and persists across sessions</p>
        </div>
      </div>
    </div>
  );
}
